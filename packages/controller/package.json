{
  "name": "@airbnb-clone/controller",
  "version": "1.0.0",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "license": "MIT",
  "scripts": {
    "build": "rimraf ./dist && tsc",
    "schema:introspect": "apollo-codegen introspect-schema http://localhost:4000/graphql --output schema.json",
    "schema:gen": "apollo-codegen generate src/**/*.tsx --schema schema.json --target ts-modern",
    "gen-types": "npm run schema:introspect && npm run schema:gen"
  },
  "dependencies": {
    "graphql": "^0.13.2",
    "graphql-tag": "^2.9.2",
    "react": "^16.4.1",
    "react-apollo": "^2.1.6",
    "react-dom": "^16.4.1"
  },
  "devDependencies": {
    "@types/node": "^10.3.4",
    "@types/react": "^16.4.1",
    "@types/react-dom": "^16.0.6",
    "apollo-codegen": "0.19.0",
    "rimraf": "^2.6.2",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "typescript": "^2.9.2"
  }
}