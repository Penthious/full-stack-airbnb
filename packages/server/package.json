{
  "name": "@airbnb-clone/server",
  "version": "1.0.0",
  "description": "Awesome project developed with TypeORM.",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "rimraf ./dist && tsc && copyfiles -u 1 src/**/*.graphql dist",
    "gen-schema-types": "ts-node -r dotenv/config src/scripts/createTypes.ts",
    "start": "cross-env NODE_ENV=develop nodemon --exec ts-node src/index.ts",
    "test": "cross-env NODE_ENV=test jest --runInBand --detectOpenHandles --verbose --forceExit"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.1",
    "@types/body-parser": "^1.17.0",
    "@types/connect-redis": "^0.0.7",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/express-rate-limit": "^2.9.3",
    "@types/express-session": "^1.15.10",
    "@types/glob": "^5.0.35",
    "@types/ioredis": "^3.2.9",
    "@types/jest": "^23.1.1",
    "@types/moment": "^2.13.0",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.3.4",
    "@types/node-fetch": "^2.1.1",
    "@types/passport": "^0.4.5",
    "@types/passport-twitter": "^1.0.34",
    "@types/request-promise": "^4.1.41",
    "@types/sparkpost": "^2.1.4",
    "@types/uuid": "^3.4.3",
    "@types/winston": "^2.3.9",
    "@types/ws": "^5.1.2",
    "@types/yup": "^0.24.7",
    "copyfiles": "^2.0.0",
    "gql2ts": "^1.8.0",
    "jest": "^23.1.0",
    "nodemon": "^1.17.5",
    "ts-jest": "^22.4.6",
    "ts-node": "6.1.1",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "typescript": "2.9.2"
  },
  "dependencies": {
    "@airbnb-clone/common": "^1.0.0",
    "@gql2ts/from-schema": "^1.8.0",
    "axios": "^0.18.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "connect-redis": "^3.3.3",
    "cross-env": "^5.2.0",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "express-rate-limit": "^2.11.0",
    "express-session": "^1.15.6",
    "glob": "^7.1.2",
    "graphql-import": "^0.6.0",
    "graphql-request": "^1.6.0",
    "graphql-tools": "^3.0.2",
    "graphql-yoga": "^1.14.8",
    "ioredis": "^3.2.2",
    "merge-graphql-schemas": "^1.5.1",
    "moment": "^2.22.2",
    "morgan": "^1.9.0",
    "node-fetch": "^2.1.2",
    "passport": "^0.4.0",
    "passport-twitter": "^1.0.4",
    "pg": "^7.4.3",
    "pjson": "^1.0.9",
    "rate-limit-redis": "^1.5.0",
    "reflect-metadata": "^0.1.12",
    "request": "^2.87.0",
    "request-promise": "^4.2.2",
    "rimraf": "^2.6.2",
    "sparkpost": "^2.1.2",
    "typeorm": "0.2.7",
    "typescript-ioc": "^1.2.4",
    "uuid": "^3.2.1",
    "winston": "^3.0.0",
    "yup": "^0.25.1"
  },
  "jest": {
    "globalSetup": "./src/testSetup/callSetup.js",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}