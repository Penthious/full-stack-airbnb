{
  "name": "@airbnb-clone/server",
  "version": "1.0.0",
  "description": "Awesome project developed with TypeORM.",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "rimraf ./dist && tsc && copyfiles -u 1 src/**/*.graphql dist",
    "gen-schema-types": "ts-node -r dotenv/config src/scripts/createTypes.ts",
    "fresh": "rm -rf ./node_modules",
    "start": "cross-env NODE_ENV=develop nodemon --exec ts-node src/index.ts",
    "test": "cross-env NODE_ENV=test jest --runInBand --detectOpenHandles --verbose --forceExit"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.17.0",
    "@types/connect-redis": "^0.0.8",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.0",
    "@types/express-rate-limit": "^2.9.3",
    "@types/express-session": "^1.15.10",
    "@types/glob": "^7.1.1",
    "@types/ioredis": "^4.0.4",
    "@types/jest": "^23.1.1",
    "@types/moment": "^2.13.0",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.3.4",
    "@types/node-fetch": "^2.1.4",
    "@types/nodemailer": "^4.6.5",
    "@types/passport": "^0.4.7",
    "@types/passport-twitter": "^1.0.34",
    "@types/request-promise": "^4.1.42",
    "@types/uuid": "^3.4.4",
    "@types/winston": "^2.4.4",
    "@types/ws": "^6.0.1",
    "@types/yup": "^0.26.3",
    "copyfiles": "^2.1.0",
    "gql2ts": "^1.10.1",
    "jest": "^23.6.0",
    "nodemon": "^1.18.9",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "typescript": "^3.2.2"
  },
  "dependencies": {
    "@airbnb-clone/common": "^1.0.0",
    "@gql2ts/from-schema": "^1.10.1",
    "axios": "^0.18.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "connect-redis": "^3.4.0",
    "cross-env": "^5.2.0",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "express-rate-limit": "^3.3.2",
    "express-session": "^1.15.6",
    "glob": "^7.1.3",
    "graphql-import": "^0.7.1",
    "graphql-request": "^1.8.2",
    "graphql-tools": "^4.0.3",
    "graphql-yoga": "^1.16.9",
    "ioredis": "^4.3.0",
    "merge-graphql-schemas": "^1.5.8",
    "moment": "^2.23.0",
    "morgan": "^1.9.1",
    "node-fetch": "^2.3.0",
    "nodemailer": "^4.7.0",
    "passport": "^0.4.0",
    "passport-twitter": "^1.0.4",
    "pg": "^7.7.1",
    "pjson": "^1.0.9",
    "rate-limit-redis": "^1.6.0",
    "reflect-metadata": "^0.1.12",
    "request": "^2.88.0",
    "request-promise": "^4.2.2",
    "rimraf": "^2.6.2",
    "typeorm": "0.2.9",
    "typescript-ioc": "^1.2.4",
    "uuid": "^3.3.2",
    "winston": "^3.1.0",
    "yup": "^0.26.6"
  },
  "jest": {
    "globalSetup": "./src/testSetup/callSetup.js",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
